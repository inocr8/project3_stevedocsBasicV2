<%= form_for(@document) do |f| %>
  <% if @document.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@document.errors.count, "error") %> prohibited this Document from being saved:</h2>

      <ul>
        <% @document.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Document name' %><br />
    <%= f.text_field :name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :short, 'Short description' %><br />
    <%= f.text_area :short, rows: 10 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :tags, 'Add tags for this document (separate with commas' %><br />
    <%= f.text_area :tags, rows: 10 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :content, 'Full content' %><br />
    <%= f.text_area :content, rows: 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :document_image, 'Image for this document' %><br />
    <%= f.file_field :document_image %>
  </div>
  <br />
  <div class="field">
    <%= f.label :category_id, 'Choose category' %><br />
    <%= f.select :category_id, Category.all.collect { |v| [v.name, v.id] } %>
  </div>
  <br />
  <div class="field">
    <%= f.label :language_id, 'Choose language' %><br />
    <%= f.select :language_id, Language.all.collect { |s| [s.name, s.id] } %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>