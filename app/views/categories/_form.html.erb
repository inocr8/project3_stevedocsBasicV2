    <%= f.label :colour, 'Colour' %><br />
    <%= f.text_field :colour, :size => 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description, rows: 10, cols: 40 %>
  </div>
  <br />
