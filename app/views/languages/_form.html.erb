  </div>
  <br />
  <div class="field">
    <%= f.label :description, 'Description' %><br />
    <%= f.text_area :description, rows: 10, cols: 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :language_image, 'Image for this language' %><br />
    <%= f.file_field :language_image %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit %>
  </div>
