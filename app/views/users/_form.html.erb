<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this User from being saved:</h2>

      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Name' %><br />
    <%= f.text_field :name, autofocus: true, :size => 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :email, 'Email' %><br />
    <%= f.email_field :email, :size => 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :role, 'Add or edit a role' %><br />
    <%= f.text_field :role, :size => 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :twitter, 'Twitter' %><br />
    <%= f.text_field :twitter, :size => 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :company, 'Company' %><br />
    <%= f.text_field :company, :size => 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :bio, 'Add a bio' %><br />
    <%= f.text_area :bio, rows: 20, cols: 40 %>
  </div>
  <br />
  <div class="field">
    <%= f.label :user_image, 'Upload a profile image' %><br />
    <%= f.file_field :user_image %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit "Update user profile" %>
  </div>
  <br />
<% end %>